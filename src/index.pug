- var pageTitle = 'M box'

doctype html
html(lang="en")
  head
    title= pageTitle
    style 
        include styles/normilize.css
        include styles/style.css
  body
    include modules/header
    
    section
        .container
            .banner 
                h1.banner__title Shake It Up
                .banner-info 
                    span.banner-info__year 2021
                    span.banner-info__age 18+
                    span.banner-info__time 4h 2min
                    span.banner-info__raiting 8.8
                p.banner__text Determined to ensure Supermans ultimate sacrifice was not in vain, 
                Bruce Wayne aligns forces with Diana Prince with plans to recruit a team of metahumans 
                to protect the world from an approaching threat of catastrophic proportions.

    include modules/footer